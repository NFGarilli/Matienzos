<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %> 
    <main>
        <section class="customer-login">
            <div class="customer-login-container">
                <div class="page-title">
                    <h3 class="iniciar-sesion"> INICIAR SESIÓN</h3>
                </div>
                <div class="account-form">
                    <form class="login-form">
                        <div class="wrap-around email">
                            <label>Email</label>
                            <input type="text" placeholder="tu@email.com" value="" name="customer[email]" class="field">
                        </div>
                        <div class="wrap-around password">
                            <label>Contraseña</label>
                            <input type="password" name="customer[password]" class="field">
                        </div>
                        <div class="login-button-container">
                            <button type="submit" class="login-button">LOGIN</button>
                        </div>
                    </form>
                </div>
                <div class="new-customer">
                    <div><a class="forgot-password">¿Olvidaste tu contraseña?</a></div>
                    <div><p class="new-account">¿Todavia no tienes cuenta?</p></div>
                    <div><a class="create-new-account" href="register">Registrate</a></div>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/footer')  %> 
</body>
</html>