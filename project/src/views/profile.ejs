<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %> 
    <main>
        <section class="profile">
            <div class="customer-login-container">
                <div class="page-title">
                    <h3 class="iniciar-sesion"> Bienvenido, <%= user.name %></h3>
                </div>
                <div class="account-form">
                    <div class="profile-avatar">
                        <img src="/images/user-avatars/<%= user.avatar %>" alt="avatar" width="150">
                    </div>
                    <form class="login-form">
                        <div class="wrap-around email">
                            <label>Nombre Completo:</label>
                            <div class="field-profile">
                                <%= user.name + " " + user.lastName %>
                            </div>
                        </div>
                        <div class="wrap-around password">
                            <label>Email:</label>
                            <div class="field-profile">
                                <%= user.email %>
                            </div>
                        </div>
                        <div class="login-button-container">
                            <a href="/user/logout">LOG OUT</a>
                        </div>
                        <div class="login-button-container">
                            <a href="/product/panel">PANEL</a>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/footer')  %> 
</body>
</html>