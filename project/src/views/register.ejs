<%- include('./partials/head')  %> 
<body>
    <%- include('./partials/header')%>
    <main>
        <section class="customer-login">
            <div class="customer-login-container">
                <div class="page-title">
                    <h3 class="iniciar-sesion"> REGISTRATE</h3>
                </div>
                <div class="account-form">
                    <form class="login-form">
                        <div class="wrap-around nombre">
                            <label>Nombre</label>
                            <input type="text" placeholder="Nombre" value="" name="customer[name]" class="field">
                        </div>
                        <div class="wrap-around apellido">
                            <label>Apellido</label>
                            <input type="text" placeholder="Apellido" value="" name="customer[surname]" class="field">
                        </div>
                        <div class="wrap-around email">
                            <label>Email</label>
                            <input type="text" placeholder="tu@email.com" value="" name="customer[email]" class="field">
                        </div>
                        <div class="wrap-around password">
                            <label>Contraseña</label>
                            <input type="password" name="customer[password]" class="field">
                        </div>
                        <div class="wrap-around password">
                            <label>Repetir Contraseña</label>
                            <input type="password" name="customer[password]" class="field">
                        </div>
                        <div class="login-button-container">
                            <button type="submit" class="login-button">LOGIN</button>
                        </div>
                        <div class="checkbox">
                            <input type="checkbox">
                            <label for="">Deseo subscribirme a la newsletter</label>
                        </div>
                    </form>
                </div>
                <div class="new-customer">
                    <div><a class="forgot-password">¿Olvidaste tu contraseña?</a></div>
                    <div><a class="create-new-account" href="login">¿Ya tienes cuenta? Inicia sesion</a></div>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>